<h1>Listing all input</h1>
<%= link_to 'New Input', new_article_path %>
<table>
  <tr>
    <th>Input</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.text %></td>
	  <td><%= link_to 'Show', article_path(article) %></td>
	  <td><%= link_to 'Run', 'articles#run' %></td> 
	  <td><%= link_to 'Destroy', article_path(article),
	               method: :delete,
				   data: { confirm: 'Are you sure?' } 
	       %>
	  </td>
    </tr>
  <% end %>
</table>
